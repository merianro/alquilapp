<p style="color: green">
  <%= notice %>
</p>

<!-- <%= render @validation %> -->

<div class="container justify-content-center">

  <div class="card text-center containerFoto">
    <div class="container-fluid">
      <div>
        <h3 class="fs-3 text-start">Licencia</h3>
      </div>
      <div class="container-fluid">
        <% @validation.images.each do |images| %>
        <%= image_tag(images,class:"img-fluid",style:"width:50%; margin-top:30px;")%>
        
            <% end %>
      </div>
    </div>
    <div class="btn-group botones" role="group">
      <!-- <%= link_to "Edit this validation", edit_validation_path(@validation) %> -->
      <% if @validation.user.validado==false then %>
      <%= button_to "Rechazar validacion" , @validation, :onclick=> "return confirm('Esta seguro que desea rechazar la
        validacion?')", method: :delete , class:"btn btn-outline-danger"%>
        <%end%>
        <%= link_to "Volver a validaciones" , validations_path ,class:"btn btn-outline-secondary"%>
    </div>
  </div>
</div>

<style>
  .botones {
    margin-top: 25px;
    margin-left: auto;
    padding-right: 10px;
    padding-bottom: 10px;
    gap: 10px;
  }

  .containerFoto{
    margin-bottom: 20px;
  }
</style>