<div class="container justify-content-center">
  <div class="col-lg">
    <div class="card text-center">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Texto</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0">
              <%= @message.text %>
            </p>
          </div>
        </div>
        <hr>

      </div>

      <% if @message.images.attached? then %>
        <div class="card text-center containerFoto">
          <div class="container-fluid">
            <div>
              <h3 class="fs-4 text-start">Imagenes adjuntadas</h3>
            </div>
            <% @message.images.each do |images| %>
              <div class="container-fluid">
                <div class="row justify-content-center containerFoto">
                  <%= image_tag(images,class:"img-fluid",style:"width:40%")%>
                </div>
                <% end %>
              </div>
          </div>
        </div>
        <%end%>

        <div class="card text-center containerFoto">
          <div class="container-fluid">
            <div>
              <h3 class="fs-4 text-start">Reporte Adjuntado</h3>
            </div>
              <div class="container-fluid" style="margin-bottom: 5px;">
                <%= link_to "Ver Reporte",sistema_reporte_path(@message.sistema_reporte_id),class:"btn btn-warning" %>
                </div>
                
              </div>
          </div>
        </div>


    </div>
  </div>
</div>

</div>

</div>