<% if params[:format] == nil %>
   <% aux = alquiler.car.id %> 
 <% else %>
   <% aux =  Car.find(params[:format]).id %> 
 <% end %> 

<%= simple_form_for(@alquiler) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="container rounded bg-white mt-5 mb-5">
<div class="card">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
              <%= image_tag(Car.find(params[:format]).images[0],class:"rounded-circle mt-5",style:"width:200px")%>
              <span class="font-weight-bold">Vehículo</span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Información del vehículo</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Marca</label><p class="text-muted mb-0"><%= Car.find(params[:format]).marca %></div>
                    <div class="col-md-6"><label class="labels">Modelo</label><p class="text-muted mb-0"><%= Car.find(params[:format]).modelo %></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Patente</label><p class="text-muted mb-0"><%= Car.find(params[:format]).patente %></div>
                    <div class="col-md-12"><label class="labels">Año</label><p class="text-muted mb-0"><%= Car.find(params[:format]).ano %></div>
                    <div class="col-md-12"><label class="labels">Color</label><p class="text-muted mb-0"><%= Car.find(params[:format]).color %></div>
                    <div class="col-md-12"><label class="labels">Transmisión</label><p class="text-muted mb-0"><%= Car.find(params[:format]).transmision %></div>
                    <div class="col-md-12"><label class="labels">Capacidad</label><p class="text-muted mb-0"><%= Car.find(params[:format]).capacidad %></div>
                    <div class="col-md-12"><label class="labels">Tipo de Combustible</label><p class="text-muted mb-0"><%= Car.find(params[:format]).tipo_de_combustible %></div>
                    <div class="col-md-12"><label class="labels">Porcentaje de Combustible</label><p class="text-muted mb-0"><%= Car.find(params[:format]).porcentaje_combustible %></div>
                </div>
                <div class="mt-5 text-center"><%= f.button :submit,'Confirmar Alquiler',:onclick => "return confirm('Si confirma el alquiler se descontaran #{Parametro.first.tarifa} de su cuenta')",class:"btn btn-outline-success"%></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
            <div class="form-inputs">
            <%= f.input :user_id, :as=> :hidden, input_html: {:value => current_user.id}%>
            <%= f.input :car_id, :as=> :hidden, input_html: {:value => aux }%>
            </div>
                <div class="d-flex justify-content-between align-items-center experience"><h4>Seleccione la duración</h4></div><br>
                <div class="col-md-12"><label class="labels">Precio por hora</label><p class="text-muted mb-0"><%= Parametro.first.tarifa %></div>
                <%= f.input :horas,collection: 1..24, required: true, autofocus: true, input_html: { autocomplete: "horas" } %>
            </div>
        </div>
        
    </div>
    </div>
</div>
<% end %>