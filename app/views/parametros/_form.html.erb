
<%= simple_form_for(@parametro) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tarifa, input_html: {:value => parametro.tarifa}%>
    <%= f.input :tarifa_extension, input_html: {:value => parametro.tarifa}%>
    <%= f.input :multa_combustible, required: true, input_html: {}%> 
    <%= f.input :multa_auto_sucio, required: true, input_html: {}%> 
    <%= f.input :multa_tiempo_excedido, required: true, input_html: {}%> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
