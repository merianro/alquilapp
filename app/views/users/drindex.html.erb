<p style="color: green"><%= notice %></p>

<div class="container-fluid justify-content-center">

  <h1>Conductores</h1>
  <div class="table-responsive">

    <table class="table table-hover">
    
      <thead class="table-light">
        <tr>
          <th class="text-center">Nombre</th> 
          <th class="text-center">Apellido</th> 
          <th class="text-center">DNI</th> 
          <th class="text-center">Fecha de Nacimiento</th> 
          <th class="text-center">Email</th> 
          <th class="text-center">Celular de Contacto</th>
          <th class="text-center"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @user.each do |user| %>
          <% if user.role == "driver" then %>
          <tr>
            <td class="text-center"><%= user.name %></td> 
            <td class="text-center"><%= user.surname %></td> 
            <td class="text-center"><%= user.dni %></td> 
            <td class="text-center"><%= user.birthdate %></td>
            <td class="text-center"><%= user.email %></td> 
            <td class="text-center"><%= user.phone %></td>
            <td class="text-center">
              <div class="btn-group">
                  <%= button_to "Ver detalle",user_path(user),class:"btn btn-secondary btn-sm" %>
                  <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                  <!-- <span class="visually-hidden">Toggle Dropdown</span> -->
                   </button>
                     <ul class="dropdown-menu">
                       <% if !user.banned%>
                        <%= link_to "Deshabilitar usuario", 'users/habilitar?id='+user.id.to_s, class:"dropdown-item" %>
                       <% else %>
                        <%= link_to "Habilitar usuario", 'users/habilitar?id='+user.id.to_s, class:"dropdown-item" %>
                      <% end %>
                  
                       
                     </ul>
              </div>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    
    </table>
  </div>
</div>

