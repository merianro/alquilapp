<p style="color: green"><%= notice %></p>

<h1>Conductores</h1>

<table class="table table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Nombre</th> 
      <th>Apellido</th> 
      <th>DNI</th> 
      <th>Fecha de Nacimiento</th> 
      <th>Email</th> 
      <th>Celular de Contacto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <% if user.role == "driver" then %>
      <tr>
        <td><%= user.name %></td> 
        <td><%= user.surname %></td> 
        <td><%= user.dni %></td> 
        <td><%= user.birthdate %></td>
        <td><%= user.email %></td> 
        <td><%= user.phone %></td>
        <td><%= link_to "Ver detalle", user %></td> 
      </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

<%= link_to "Agregar nuevo usuario", users_new_path %>
