<%= simple_form_for(@user, url: users_update_details_url) do |f| %> 

<div class="container-fluid justify-content-center" align="center">
  <div class="col-lg-7 ">
    <div class="card mb">
    <div class="card-body text-start">
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Nombre</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :name,label: 'Nombre' ,required: true, autofocus: true, input_html: { autocomplete: "name" } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Apellido</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :surname, label: 'Apellido',required: true, autofocus: true, input_html: { autocomplete: "surname" } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Fecha de Nacimiento</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :birthdate,start_year: Time.now.year - 100, end_year: Time.now.year-18,label: 'Fecha de Nacimiento', required: true, autofocus: true, input_html: { autocomplete: "birthdate" } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Teléfono</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :phone,label: 'Teléfono', required: true, autofocus: true, input_html: { autocomplete: "birthdate" } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">DNI</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :dni,label: 'DNI' ,required: true, autofocus: true, input_html: { autocomplete: "dni" } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Fecha de vencimiento de Licencia</p>
          </div>
          <div class="col-sm-9">
            <%= f.input :vencimiento_licencia, start_year: Time.now.year, end_year: Time.now.year+10, required: true, autofocus: true, input_html: { autocomplete: "vencimiento_licencia" } %>
          </div>
        </div>
      </div>
      <div class="btn-group botonConf" role="group">
        <%= f.button :submit,'Guardar cambios',class:"btn btn-outline-success"%>
        <%= link_to "Volver al perfil",@user,class:"btn btn-outline-secondary"%>          
      </div>
    </div>
    </div>
  <%= f.input :id, :as=> :hidden, input_html: {:value => user.id}%>
  
<% end %>


<style>
  .botonConf{
    margin-left: auto;
    padding: 7px;
    gap: 10px;
  }
  </style>