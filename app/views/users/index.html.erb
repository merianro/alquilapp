<p style="color: green"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Nombre</th> 
      <th>Apellido</th> 
      <th>DNI</th> 
      <th>Fecha de Nacimiento</th> 
      <th>Email</th> 
      <th>Celular de Contacto</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.role == "su" or user.role == "driver" then %>
      <tr>
        <td><%=h user.name %></td> 
        <td><%=h user.surname %></td> 
        <td><%=h user.dni %></td> 
        <td><%=h user.birthdate %></td>
        <td><%=h user.email %></td> 
        <td><%=h user.phone %></td>
        <td><%= button_to "Ver detalle", user, class:"btn btn-outline-primary" %></td>
        <td><%= button_to "Editar", edit_user_path(user), class:"btn btn-outline-secondary" %></td>
        <td><%= button_to "Eliminar", user,:onclick => "return confirm('Esta seguro que desea eliminar el usuario?')", method: :delete, class:"btn btn-outline-danger" %></td>
      
      </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

<%= button_to "Agregar nuevo usuario", new_user_path, class:"btn btn-outline-success" %>
