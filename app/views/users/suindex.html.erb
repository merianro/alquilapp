<p style="color: green"><%= notice %></p>

<h1>Supervisores</h1>

<table class="table table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Nombre</th> 
      <th>Apellido</th> 
      <th>DNI</th> 
      <th>Fecha de Nacimiento</th> 
      <th>Email</th> 
      <th>Celular de Contacto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.role == "su" then %>
      <tr>
        <td><%= user.name %></td> 
        <td><%= user.surname %></td> 
        <td><%= user.dni %></td> 
        <td><%= user.birthdate %></td>
        <td><%= user.email %></td> 
        <td><%= user.phone %></td>
        <td class="text-center"><%= link_to "Ver detalle", user,class:"btn btn-secondary btn-sm" %></td> 
      </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

<%= link_to "Agregar nuevo supervisor", users_newsu_path,class:"btn btn-outline-success btn-sm" %>
