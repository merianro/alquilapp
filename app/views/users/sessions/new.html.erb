<%= stylesheet_link_tag "login" %>
      
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
              <h5 class="card-title text-center mb-4 fw-light fs-5">Iniciar Sesión</h5>
              <form>
                <div class="form-floating mb-3">
                  <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class:"form-control" } %>
                </div>
                <div class="form-floating mb-3">
                  <%= f.input :password, required: true, input_html: { autocomplete: "current-password" } %>
                </div>

                <div class="form-check mb-3">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
                </div>
                <div class="d-grid">
                  <%= f.button :submit, "Iniciar Sesión" , class:"btn btn-warning btn-login text-uppercase fw-bold"%>
                </div>
                <p style="color: green"><%= notice %></p>
                <p class="text-danger"><%= alert %></p>
                <hr class="my-4">
                <div class="d-grid mb-2">
                  <%- if devise_mapping.registerable? && controller_name !='registrations' %>
                    <%= link_to "Registrarse" , new_registration_path(resource_name), class:"btn btn-primary"%><br />
                      <% end %>
                </div>
                <div class="d-grid">
                  <%- if devise_mapping.recoverable? && controller_name !='passwords' && controller_name !='registrations' %>
                    <%= link_to "Olvidaste tu contraseña?" , new_password_path(resource_name), class:"btn btn-primary" %><br />
                      <% end %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>